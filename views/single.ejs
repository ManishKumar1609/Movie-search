<%- include("./partials/header"); %>
    <style>
        .singlee {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .image-container {
            width: 400px;
            height: 600px;
            overflow: hidden;
            border-radius: 8px;
            margin-right: 20px;
        }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .text-container {
            max-width: 600px;
        }

        .singlee{
            background-color: black;
        }

        .op{
            font-size: large;
            color: #f8f9fa;
        }
        .h33{
            color: white;
        }

        .h11{
            color: rgb(224, 28, 28);
        }

        .rating{
            color: orange;
        }
        .h55{
            color: rgb(36, 73, 185);
        }
    </style>
</head>

<body >
    <div class="singlee">
    <div class="container">
        <% if(data && data.Response && data.Response === "True"){ %>
            <div class="container my-3">
                <div class="image-container">
                    <img src="<%= data.Poster %>" alt="Image">
                </div>
                <div class="text-container">
                    <h1 class="h11">
                        <%= data.Title %>
                    </h1>
                    <h3 class="rating">
                        IMDB Rating : <%= data.imdbRating %>
                    </h3>
                    <h3 class="h33">
                       Director : <%= data.Director %>
                    </h3>
                    <h3  class="text-success">
                        Released on : <%= data.Released %>
                    </h3>
                    <h3 class="h33">
                        Genre : <%= data.Genre %>
                    </h3>
                    <h5 class="h55">
                        Language/s : <%= data.Language %>
                    </h5>
                    <h5 class="h55">
                        Cast : <%= data.Actors %>
                    </h5>
                    <h5 class="h6">
                        Awards : <%= data.Awards %>
                    </h5>
                    <p class="op">
                        Plot : <%= data.Plot %>
                    </p>
                    <p class="op">
                        Net Gross : <%= data.BoxOffice %>
                    </p>
                    <form style="display: inline;margin: 0;" action="/wtchList/<%= data.imdbID %>/<%= data.Title %>/<%= data.Released %>" method="post">
                    <button type="submit" class="btn btn-primary">Add To WatchList</button>
                    </form>
                </div>
            </div>
        <% } else { %>
            <h2>Content Not Found</h2>
        <% } %>
    </div>

</div>
<%- include("./partials/footer"); %>

